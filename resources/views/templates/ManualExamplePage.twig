{% extends 'PlentyPluginShowcase::templates.ExamplePage' %}

{% block MainFrame %}
	<div class="row">
		<div class="col-lg-9 col-md-9">
			{% block Content %}{% endblock %}
		</div>

		<div class="col-lg-3 col-md-3 hidden-sm hidden-xs fixed-right" id="{{ navId | default('sidebar-nav') }}">
			<ul class="nav nav-list">
				{% for label in QuickNavigation %}
					<li>
						<a href="#{{ label | cssSelector }}" data-scrollTo="#{{ label | cssSelector }}" data-scrollOffset="70">{{ label }}</a>
					</li>
				{%  endfor %}
				</li>
			</ul>
			<a href="#" data-scrollTo="0">Back to top</a>
		</div>
	</div>
{% endblock %}

{% block AdditionalScripts %}
	<link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Source+Code+Pro|Source+Sans+Pro:400,600,700">
	<script src="{{ plugin_path('PlentyPluginShowcase') }}/js/prettify.js"></script>
{% endblock %}
